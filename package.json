{
  "name": "orion",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "dev:api": "turbo run dev --filter=@orion/api",
    "dev:web": "turbo run dev --filter=@orion/web",
    "dev:mobile": "turbo run dev --filter=@orion/mobile",
    "db:migrate": "pnpm --filter @orion/api exec prisma migrate dev",
    "db:generate": "pnpm --filter @orion/api exec prisma generate",
    "db:push": "pnpm --filter @orion/api exec prisma db push",
    "db:studio": "pnpm --filter @orion/api exec prisma studio"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
